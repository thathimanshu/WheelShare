<% layout("/layouts/boilerplate")%>
<style>
    .img-container {
        width: 100%;
        height: 600px;
        position: relative;
    }
    
    .img-container::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        z-index: 1;
    }
    
    .homeimg {
        width: 100%;
        object-fit: cover;
        height: 100%;
        display: block;
    }
    
    .on-img {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 2;
        text-align: center;
    }
    
    .on-img h2{
        color: rgb(184, 184, 184);
    }
    h1{
        color: white;
        margin-top: 10px;
    }
    .logo{
        height: 100px;
    }
    .filter{
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 4rem;
    width: 4rem;
    text-align: center;
    margin-top: 4rem;
    margin-right: 2rem;
    margin-bottom: 0;
    opacity: 0.7;
    cursor: pointer;
    border: 2px solid rgb(184, 184, 184);
    border-radius: 8px;
  }
  .filter:hover{
    opacity: 1;
  }
  .filter p{
    font-size: 0.7rem;
    color: white;
    margin: 0;
  }
  a{
    color: white;
  }
  .pros {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center; 
  padding: 2rem 5rem;
   }

  .cards {
    flex: 1 1 calc(28%); 
    margin: 1rem;
    text-align: center;
    padding: 20px;
  }
  .cards img{
    height: 100px;
    width:fit-content;
  }
  .products{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    padding: 2rem 5rem;
  }
  .p-card{
    position: relative;
    height: 200px;
    width: 300px;
    margin: 0.5rem;
  }
  .p-card img{
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    object-fit: cover;
  }
  .p-card::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1;
    }
    .p-card-text{
        position: absolute;
        z-index: 2;
        color: white;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        font-size: 24px;
        text-wrap: nowrap;
    }
    .headline{
        width: 100%;
        padding-top: 1rem;
        border-top: 1px solid rgb(120, 120, 120);
        display: flex;
        justify-content: center;
    }
</style>
